@model IEnumerable<Order>

<h2>Your Orders</h2>

<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>@order.Comment</td>
            </tr>
        }
    </tbody>
</table>